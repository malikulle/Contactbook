@model UpdatePersonContactViewModel
<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title"><span class="fas fa-plus"></span> Update Person Contact</h5>
			</div>
			<div class="modal-body">
				<form id="form-person-contact-update" asp-action="UpdatePersonContact" asp-controller="Contact">
					<input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
					<div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display:none;"></div>
					<input type="hidden" asp-for="Id" />
					<div class="form-group">
						<label asp-for="Id"></label>
						<input readonly class="form-control" asp-for="Id" />
					</div>
					<div class="form-group">
						<label asp-for="ContactType"></label>
						<select class="form-control" asp-for="@Model.ContactType" asp-items="Html.GetEnumSelectList<CommonProject.Enum.ContactType>()"></select>
						<span class="text-danger" asp-validation-for="ContactType"></span>
					</div>
					<div class="form-group">
						<label asp-for="Description"></label>
						<input class="form-control" asp-for="Description" />
						<span class="text-danger" asp-validation-for="Description"></span>
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-primary btn-block" id="btn-person-contact-update"><span class="fas fa-save"></span> Save</button>
			</div>
		</div>
	</div>
</div>